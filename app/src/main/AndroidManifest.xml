<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs121.hmc.edu.remindme">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-sdk android:targetSdkVersion="14"/>

    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AlarmListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".AlarmManagerHelper" >
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service android:name=".AlarmService"
            android:enabled="true" />
        <activity android:name=".AlarmFrequency"/>

        <activity android:name=".AlarmDetailsActivity" />
        <activity android:name=".AlarmScreen" />
        <activity android:name=".AlarmDaysOfWeek"/>
        <activity android:name=".AlarmMonthly"/>
        <activity android:name=".SetName"/>
        <activity android:name=".OneTimeReminder"/>
        <activity android:name=".Timepicker"></activity>
        <activity android:name=".Datepicker"></activity>
        <activity android:name=".EditDaily"/>
        <activity android:name=".EditMonthly"/>
        <activity android:name=".EditWeekly"/>
        <activity android:name=".EditOneTime"/>
        <activity android:name=".setSnooze"/>
    </application>

</manifest>
