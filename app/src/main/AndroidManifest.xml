<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs121.hmc.edu.remindme">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" ></uses-permission>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-sdk android:targetSdkVersion="14"/>

    <application


        android:allowBackup="true"
        android:icon="@drawable/logosquare"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation = "portrait"
            android:name=".AlarmListActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".AlarmDetailsActivity"
            android:parentActivityName=".AlarmListActivity"
            android:screenOrientation = "portrait"/>

        <activity
            android:name=".AlarmFrequency"
            android:parentActivityName=".AlarmListActivity"/>

        <activity
            android:name=".SplashScreen"
            android:screenOrientation = "portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AlarmScreen"
            android:screenOrientation = "portrait"/>

        <activity android:name=".AlarmDaysOfWeek"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait"/>

        <activity android:name=".AlarmMonthly"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait"/>

        <activity
            android:name=".SetName"
            android:finishOnTaskLaunch="true"
            android:parentActivityName=".AlarmListActivity"
            android:screenOrientation = "portrait"/>

        <activity
            android:name=".OneTimeReminder"
            android:finishOnTaskLaunch="true"
            android:parentActivityName=".AlarmListActivity"
            android:screenOrientation = "portrait"/>

        <activity
            android:name=".Timepicker"
            android:finishOnTaskLaunch="true"
            android:parentActivityName=".AlarmListActivity"
            android:screenOrientation = "portrait" />

        <activity android:name=".Datepicker"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait" />

        <activity android:name=".EditDaily"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait"
            />
        <activity android:name=".EditMonthly"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait"
            />

        <activity android:name=".EditWeekly"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait"
            />

        <activity android:name=".EditOneTime"
            android:finishOnTaskLaunch="true"
            android:screenOrientation = "portrait"
            />

        <receiver android:name=".AlarmManagerHelper" >
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service android:name=".AlarmService"
            android:enabled="true" />

    </application>

</manifest>
