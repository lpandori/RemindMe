<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_above="@+id/date"
        android:layout_marginLeft="20dp"
        android:id="@+id/date"
        android:text = "Choose a date..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <DatePicker
        android:layout_below="@+id/date"
        android:calendarViewShown="false"
        android:id = "@+id/datepcker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></DatePicker>

    <ImageButton
        android:layout_alignBaseline="@+id/datepcker"
        android:layout_toRightOf="@+id/datepcker"
        android:layout_below="@+id/date"
        android:id = "@+id/calendarbutton"
        android:src = "@mipmap/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id= "@+id/time"
        android:layout_below="@+id/datepcker"
        android:text = "Choose a time..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TimePicker
        android:layout_below="@+id/datepcker"
        android:layout_toLeftOf="@+id/calendarbutton"
        android:layout_weight = "1"
        android:id="@+id/timepcker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TimePicker>

</RelativeLayout>